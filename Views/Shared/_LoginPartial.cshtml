@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" class="d-inline">
        <button type="submit" class="btn btn-outline btn-sm">로그아웃</button>
    </form>
}
else
{
    <a class="btn btn-outline btn-sm me-1" asp-area="Identity" asp-page="/Account/Login">로그인</a>
    <a class="btn btn-outline btn-sm"     asp-area="Identity" asp-page="/Account/Register">회원가입</a>
}

